<h1>{{question.title}}</h1>

{{#if isEditing}}
<form>
  <div class="form-group">
    <label for="title">Question</label>
    {{input value=title id="title" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="author">Author</label>
    {{input value=author id="author" class="form-control"}}
  </div>

  <div class="form-group">
    <label for="description">Description</label>
    {{textarea value=description id="description" class="form-control" rows="15"}}
  </div>

  <button class="btn btn-primary" {{action 'save'}}>Save</button>
</form>
{{else}}
<p>{{body}}</p>

<button class="btn btn-primary" {{action 'edit'}}>Edit</button>
<button class="btn btn-xs btn-danger" {{action 'delete'}}>Delete</button>
{{/if}}

{{outlet}}

<h2>Answers</h2>

{{#each answer in answers itemController="answer"}}
<p>

  <li>{{#link-to 'answer' answer}}{{answer.description}}{{/link-to}}</li>
  <!-- {{product.description}} -->
  <button class="btn btn-xs btn-danger" {{action 'delete'}}>Delete</button>
</p>
{{/each}}

<p>{{#link-to 'new-answer' this class="btn btn-success"}}Add an answer{{/link-to}}</p>
